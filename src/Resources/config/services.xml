<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="paymaxi_fractal.manager.class">Paymaxi\FractalBundle\ContainerAwareManager</parameter>
    </parameters>

    <services>
        <service id="paymaxi_fractal.manager" class="%paymaxi__fractal.manager.class%">
	        <call method="setContainer">
		        <argument type="service" id="service_container"/>
	        </call>
        </service>
        <service id="fractal.transformer.resolvers" class="Sylius\Component\Registry\PrioritizedServiceRegistry">
            <argument type="string">Paymaxi\FractalBundle\Resolver\ResolverInterface</argument>
        </service>
    </services>
</container>
